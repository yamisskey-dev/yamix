  "description": "Open-source anonymous SNS template engine with approval economy - 承認経済による匿名SNSテンプレートエンジン",
  "keywords": [
    "life-advice",
    "sns",
    "self-hosted",
    "anonymous",
    "token-economy"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yamisskey-dev/yamix.git"
  },
  "license": "AGPL-3.0",
  "packageManager": "pnpm@10.18.2",
  "engines": {
    "node": ">=22.15.0"
  },
  "workspaces": [
    "packages/frontend",
    "packages/backend",
    "packages/shared"
  ],
  "scripts": {
