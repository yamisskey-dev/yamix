// Prisma schema for Yamix
// Blockchain-inspired anonymous identity system

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Wallet - ユーザーのアイデンティティ（ブロックチェーンのウォレット相当）
model Wallet {
  id        String   @id @default(uuid())
  address   String   @unique  // 短いハッシュ（8文字）
  balance   Int      @default(0)
  createdAt DateTime @default(now()) @map("created_at")

  // 認証連携（オプション）
  discordId   String?  @unique @map("discord_id")
  fediverseId String?  @unique @map("fediverse_id")

  // Relations
  posts            Post[]
  sentTransactions Transaction[] @relation("sender")

  @@map("wallets")
}

// Category - 投稿のカテゴリ
model Category {
  id        String   @id @default(uuid())
  name      String   @unique
  slug      String   @unique
  order     Int      @default(0)
  createdAt DateTime @default(now()) @map("created_at")

  // Relations
  posts Post[]

  @@map("categories")
}

// Post - 投稿
model Post {
  id         String   @id @default(uuid())
  content    String   @db.Text
  walletId   String   @map("wallet_id")
  categoryId String   @map("category_id")
  createdAt  DateTime @default(now()) @map("created_at")

  // Relations
  wallet       Wallet        @relation(fields: [walletId], references: [id])
  category     Category      @relation(fields: [categoryId], references: [id])
  transactions Transaction[]

  @@index([walletId])
  @@index([categoryId])
  @@index([createdAt])
  @@map("posts")
}

// Transaction - リアクション（トークン転送）
model Transaction {
  id        String   @id @default(uuid())
  postId    String   @map("post_id")
  senderId  String   @map("sender_id")
  amount    Int      @default(1)
  createdAt DateTime @default(now()) @map("created_at")

  // Relations
  post   Post   @relation(fields: [postId], references: [id], onDelete: Cascade)
  sender Wallet @relation("sender", fields: [senderId], references: [id])

  @@index([postId])
  @@index([senderId])
  @@map("transactions")
}
