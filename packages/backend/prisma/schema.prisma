// Prisma schema for Yamix
// Blockchain-inspired anonymous identity system

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Wallet - ユーザーのアイデンティティ（ブロックチェーンのウォレット相当）
model Wallet {
  id        String   @id @default(uuid())
  address   String   @unique  // 短いハッシュ（8文字）
  name      String?  // 表示名（任意）
  balance   Int      @default(0)
  createdAt DateTime @default(now()) @map("created_at")

  // 認証連携（オプション）
  discordId   String?  @unique @map("discord_id")
  fediverseId String?  @unique @map("fediverse_id")

  // Relations
  posts            Post[]
  sentTransactions Transaction[] @relation("sender")
  following        Follow[]      @relation("follower")

  @@map("wallets")
}

// Follow - サイレントウォッチ（フォローされた側には見えない）
model Follow {
  id         String   @id @default(uuid())
  followerId String   @map("follower_id")
  targetId   String   @map("target_id")
  createdAt  DateTime @default(now()) @map("created_at")

  // Relations
  follower Wallet @relation("follower", fields: [followerId], references: [id], onDelete: Cascade)

  @@unique([followerId, targetId])
  @@index([followerId])
  @@index([targetId])
  @@map("follows")
}

// Post - 投稿（返信も投稿として扱う）
model Post {
  id        String   @id @default(uuid())
  content   String   @db.Text
  walletId  String   @map("wallet_id")
  parentId  String?  @map("parent_id")  // 返信の場合、親投稿のID
  createdAt DateTime @default(now()) @map("created_at")

  // Relations
  wallet       Wallet        @relation(fields: [walletId], references: [id], onDelete: Cascade)
  parent       Post?         @relation("PostReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies      Post[]        @relation("PostReplies")
  transactions Transaction[]

  @@index([walletId])
  @@index([createdAt])
  @@index([parentId])
  @@map("posts")
}

// Transaction - リアクション（トークン転送）
model Transaction {
  id        String   @id @default(uuid())
  postId    String   @map("post_id")
  senderId  String   @map("sender_id")
  amount    Int      @default(1)
  createdAt DateTime @default(now()) @map("created_at")

  // Relations
  post   Post   @relation(fields: [postId], references: [id], onDelete: Cascade)
  sender Wallet @relation("sender", fields: [senderId], references: [id], onDelete: Cascade)

  @@index([postId])
  @@index([senderId])
  @@map("transactions")
}
